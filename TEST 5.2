#include <stdio.h>

int main() {
    int python, c, maths, physics, total;
    float aggregate;

    printf("Enter the marks in python: ");
    scanf("%d", &python);
    printf("Enter the marks in c programming: ");
    scanf("%d", &c);
    printf("Enter the marks in Mathematics: ");
